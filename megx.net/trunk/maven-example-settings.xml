<settings xmlns="http://maven.apache.org/SETTINGS/1.1.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.1.0
                      http://maven.apache.org/xsd/settings-1.1.0.xsd">

	<!-- This is an example Maven settings.xml file. It contains specific Chon 
		and megx.net build settings specific for local compute environments. Please 
		copy whole file or contents to your local Maven settings.xml (default in 
		$HOME/.m2/settings.xml) file and adjust configuration accordingly -->

	<!-- this server is required to create the JCR repository in work directory. 
		Please ask for user/password -->
	<servers>
		<server>
			<id>dev-dav.megx.net</id>
			<username><!-- you need to ask for it --></username>
			<password><!-- you need to ask for it --></password>
		</server>
	</servers>

	<!-- making use of Maven Profile concept for environment specific settings. 
		For background see https://maven.apache.org/guides/introduction/introduction-to-profiles.html -->
	<profiles>
		<profile>
			<id>megx-dev</id>
			<!-- profile gets only activated if user rkottman is logged in a Windows 
				OS i.e. maven is running under rkottman on windows -->
			<activation>
				<property>
					<name>user.name</name>
					<!-- please change to your user name if you want this activation logic -->
					<value><!-- Add your username here --></value>
				</property>
			</activation>
			<!-- Add here your property values -->

			<!-- Properties are just defaults: need to be overwritten in profiles 
				etc. -->
			<!-- These are defaults taken from https://colab.mpi-bremen.de/source/browse/~br=trunk/microb3/trunk/pom.xml?r=812 -->
			<properties>
				<!-- maven plugin configuration properties -->
				<tycho.version>0.19.0</tycho.version>
				<tycho.groupid>org.eclipse.tycho</tycho.groupid>
				<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>

				<!-- all user defined properties get the mvn prefix -->

				<!-- work directory location -->
				<mvn.work.dir.name>megx.net-work.dir</mvn.work.dir.name>
				<mvn.work.dir.path>${user.home}/${mvn.work.dir.name}</mvn.work.dir.path>

				<!-- If failed copy of bundle to plugins dir should fail the maven build -->
				<mvn.ant.failonerror>true</mvn.ant.failonerror>
				<mvn.module.default.version>1.0.0.SNAPSHOT</mvn.module.default.version>

				<!-- Development settings for JCR repository -->
				<mvn.jcr.source.url>https://dev-dav.megx.net/jcr-repositories/</mvn.jcr.source.url>
				<mvn.jcr.source.file>current-repository.tar.gz</mvn.jcr.source.file>

				<!-- Development and test web container settings -->
				<mvn.cargo.container.id>tomcat7x</mvn.cargo.container.id>
				<mvn.tomcat.home>${user.home}/tomcat</mvn.tomcat.home>
				<mvn.tomcat.port>8080</mvn.tomcat.port>

				<!-- megx.net database connection properties -->
				<mvn.db.host>localhost</mvn.db.host>
				<mvn.db.port>5432</mvn.db.port>
				<mvn.db.name>megdb_r8</mvn.db.name>
				<mvn.db.user>${user.name}</mvn.db.user>
				<mvn.db.password />

			</properties>
		</profile>
	</profiles>
</settings>