<?xml version="1.0" encoding="UTF-8"?>
<archetype-descriptor
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.0.0 http://maven.apache.org/xsd/archetype-descriptor-1.0.0.xsd"
    name="net.megx-plugin-archetype"
    xmlns="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

    <requiredProperties>
        <requiredProperty key="groupId">
            <defaultValue>net.megx</defaultValue>
        </requiredProperty>
        <requiredProperty key="plugin_name">
            <defaultValue>megx.net plugin groupid: ${archetypeGroupId} or ${groupId}</defaultValue>
        </requiredProperty>
    </requiredProperties>

    <fileSets>
        <fileSet filtered="true" encoding="UTF-8" packaged="true">
            <directory>src/main/java</directory>
            <includes>
                <include>**/*.java</include>
            </includes>
        </fileSet>

        <fileSet filtered="true" filencoding="UTF-8">
            <directory>__config</directory>
            <includes>
                <include>**/*.json</include>
            </includes>
        </fileSet>

        <fileSet encoding="UTF-8">
            <directory>lib</directory>
            <includes>
                <include>**/*.jar</include>
            </includes>
        </fileSet>

        <fileSet filtered="true" encoding="UTF-8">
            <directory>META-INF</directory>
            <includes>
                <include>MANIFEST.MF</include>
            </includes>
        </fileSet>

        <fileSet filtered="true" encoding="UTF-8">
            <directory>.settings</directory>
            <includes>
                <include>**/*.prefs</include>
            </includes>
        </fileSet>

        <fileSet filtered="true" encoding="UTF-8">
            <directory></directory>
            <includes>
                <include>.classpath</include>
                <include>build.properties</include>
                <include>.project</include>
            </includes>
        </fileSet>

    </fileSets>
</archetype-descriptor>
