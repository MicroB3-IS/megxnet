<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="net.megx.security.auth.services.db.UserMapper">
	<resultMap type="User" id="user_map">
		<result property="login" column="logname"/>
		<result property="firstName" column="first_name"/>
		<result property="initials" column="initials"/>
		<result property="lastName" column="last_name"/>
		<result property="description" column="description"/>
		<result property="joinedOn" column="join_date"/>
		<result property="password" column="pass"/>
		<result property="disabled" column="disabled"/>
		<result property="email" column="email"/>
		<result property="lastlogin" column="lastlogin"/>
		<result property="external" column="external"/>
		<result property="provider" column="provider"/>
		<association property="roles" select="getRolesForUser" column="logname"/>
	</resultMap>
	
	<resultMap type="User" id="user_map_no_pass">
		<result property="login" column="logname"/>
		<result property="firstName" column="first_name"/>
		<result property="initials" column="initials"/>
		<result property="lastName" column="last_name"/>
		<result property="description" column="description"/>
		<result property="joinedOn" column="join_date"/>
		<result property="disabled" column="disabled"/>
		<result property="email" column="email"/>
		<result property="lastlogin" column="lastlogin"/>
		<result property="external" column="external"/>
		<result property="provider" column="provider"/>
		<association property="roles" select="getRolesForUser" column="logname"/>
	</resultMap>
	
	<resultMap type="Role" id="role_map">
		<result property="label" column="label"/>
		<result property="description" column="description"/>
	</resultMap>
	
	<resultMap type="UserVerification" id="user_verification_map">
		<result column="logname" property="logname"/>
		<result column="verification_type" property="verificationType"/>
		<result column="verification_value" property="verificationValue"/>
		<result column="created" property="created"/>
	</resultMap>
	
	<sql id="user_columns_list">
		logname, 
		first_name, 
		initials, 
		last_name, 
		description, 
		join_date, 
        pass, 
        disabled,
        email,
        lastlogin,
        external,
        provider
	</sql>
	
	
	<sql id="user_verification_columns_list">
		logname,
		verification_type,
		verification_value,
		created
	</sql>
	
	
	<select id="getRolesForUser" resultMap="role_map" parameterType="string">
		select r.label, r.description from auth.roles r
			left join auth.has_roles h on r.label = h.role 
				where h.user_login=#{logname}
	</select>
	
	<select id="getUserByUserId" resultMap="user_map" parameterType="string">
		select 
			<include refid="user_columns_list"/>
  			
  			from auth.users
  			
  				where logname=#{logname}
	</select>
	
	
	
	<select id="getUserByConsumerKey" resultMap="user_map" parameterType="string">
		select 
			<include refid="user_columns_list"/>
  			
  			from auth.users as u 
  				inner join auth.consumers as c on c.logname=u.logname
			where c.key=#{key}
	</select>
	
	<select id="getUserForUsernameAndPassword" resultMap="user_map" parameterType="map">
		select 
			<include refid="user_columns_list"/>
            	
            	from auth.users where logname=#{username} and 
			(pass=#{password} OR pass IS NULL) and
			external == false and
			disabled == false
	</select>
	
	<select id="getVerification" parameterType="map" resultMap="user_verification_map">
		select 
			<include refid="user_verification_columns_list"/>
				from auth.user_verification
					where verification_value=#{verificationValue} and
						now() &lt; (created + interval '${ttl} ms')
	</select>
	

	<insert id="addUser" parameterType="User">
		insert into auth.users
			(logname,first_name,initials,last_name,	description, join_date, pass, disabled, email, lastlogin)
			values
			(#{login},#{firstName},#{initials},#{lastName},#{description},#{joinedOn},#{password},#{disabled}, #{email}, #{lastlogin})
	</insert>
	
	<insert id="createVerification" parameterType="UserVerification">
		insert into auth.user_verification(
			logname,
			verification_type,
			verification_value,
			created
		)
		values
			(#{logname},  #{verificationType},#{verificationValue}, now())
	</insert>
	
	<update id="updateUser" parameterType="User">
		update auth.users
			set first_name=#{firstName}, 
				initials=#{initials},
				last_name=#{lastName},
				description=#{description},
				join_date=#{joinedOn},
				<if test="password != null">
	            	pass=#{password},
	            </if>
	            disabled=#{disabled},
	            email=#{email}
			
			where logname=#{login}
	</update>
	
	<delete id="removeUser" parameterType="string">
		delete from auth.users where logname=#{value}
	</delete>
	
	<delete id="revokeRole" parameterType="map">
		DELETE FROM auth.has_roles 
			WHERE role=#{role} AND
					user_login=#{login}
	</delete>
	
	<delete id="deleteVerification" parameterType="string">
		delete from auth.user_verification
			where verification_value=#{value}
	</delete>
	
	<delete id="cleanupVerifications" parameterType="long">
		delete from auth.user_verification
			where now() &lt; (created + interval '${ttl} ms')
	</delete>
	
	<insert id="grantRole"  parameterType="map">
		INSERT INTO auth.has_roles (role, user_login)
			VALUES (#{role},#{login})
	</insert>
	
	<insert id="createRole" useGeneratedKeys="true" parameterType="Role">
		INSERT INTO auth.roles (label,description)
			VALUES (#{label},#{description})
	</insert>
	
	<select id="getAllRoles" resultMap="role_map">
		select r.label, r.description from auth.roles as r
	</select>
	
	<delete id="removeRole" parameterType="int">
		delete from auth.roles where role=#{role}
	</delete>
	
	<select id="getRole" resultMap="role_map" parameterType="string">
		select r.label, r.description from auth.roles as r where role=#{value}
	</select>
	
	
	<select id="getRolesForNames" resultMap="role_map" parameterType="map">
		select r.label, r.description from auth.roles as r where name in 
		<foreach collection="names" item="roleName" separator="," open="(" close=")">
		#{roleName}	
		</foreach>
		
	</select>
	
	
	<select id="getUsers" resultMap="user_map_no_pass">
	    select 
	    
	    <include refid="user_columns_list"/>
	    
	     from auth.users
	</select>
</mapper>