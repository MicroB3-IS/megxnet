{
    "renderForm":true,
    "toolbarSticky":true,
    "form":{
        "toggleSubmitValidState":true,
        "attributes":{
            "id":"contact-form",
            "method":"post",
            "action":"${net.megx.contact.form.action.url}"
        },
        "buttons":{
            "submit":{},
            "reset":{}
        }
    },
    "helper":"Your feedback is welcome!",
    "fields":{
        "name":{
            "size":20,
            "helper":"Please enter your name."
        },
        "email":{
            "helper":"Please enter your e-mail."
        },
        "comment":{
            "type":"textarea",
            "rows":5,
            "cols":40,
            "helper":"Please enter your feedback."
        }
    }
}