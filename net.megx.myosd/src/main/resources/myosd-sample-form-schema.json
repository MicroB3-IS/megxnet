{
  "title": "MyOSD Sample Registration",
  "description": "Please fill all fields for a sample and submit.",
  "definitions": {


    "first_name": {
      "type": "string",
      "title": "First Name",
      "pattern": "^[^0123456789;%#\\\\()$%!@^*/=]*$",
      "required": true
    },

    "last_name": {
      "type": "string",
      "title": "Last Name",
      "pattern": "^[^0123456789;%#\\\\()$%!@^*/=]*$",
      "required": true
    },

    "institute": {
      "type": "string",
      "title": "Institute",
      "description": "Please use the full, official name of your institute in English (preferably the one used for site registration).",
      "required": true,
      "pattern": "^([^1234506789;\\\\()$%!@^*/=])([^1234506789;\\\\()$%!@^*/=])[^;$%\\\\!@^*\\]\\[=]+$"
    },

    "email": {
      "type": "string",
      "format": "email",
      "title": "e-mail",
      "required": true
    },

    "unit": {
      "type": "string",
      "title": "Unit",
      "description": "Please choose an SI conforming unit of measurement.",
      "required": true
    },

    "value": {
      "title": "Value",
      "required": true,
      "type": "number"
    },



    "measurement": {
      "title": "Measurement",
      "type": "object",
      "properties": {
        "value": {
          "$ref": "#/definitions/value"
        },

        "unit": {
          "$ref": "#/definitions/unit"
        }
      }
    }
  },

  "type": "object",
    "properties": {
      "version": {
      "type": "string",
      "readonly": true,
      "required": true,
      "default": "1"
    },

    "contact": {
      "type": "object",
      "title": "Primary Contact",
      "description": "The main contact responsible for sampling and data submission.",
      "required": false,
      "properties": {
        "first_name": {
          "title" : "First Name",
          "$ref": "#/definitions/first_name"
        },

        "last_name": {
          "$ref": "#/definitions/last_name"
        },

        "email": {
          "$ref": "#/definitions/email"
        }
      }
    },

    "participants": {
      "title": "Additional Participants",
      "description": "List of people who will appear in the citation of data publications. Please order the list according to authorship.",
      "type": "array",
      "uniqueItems": false,
      "items": {
        "type": "object",
        "properties": {
          "first_name": {
            "$ref": "#/definitions/first_name"
          },

          "last_name": {
            "$ref": "#/definitions/last_name"
          },

          "email": {
            "$ref": "#/definitions/email"
          }
        }
      }
    },

    "firstname": {
      "type": "string",
      "pattern": "^[^0123456789;%#]*$",
      "required": true
    },

    "lastname": {
      "type": "string",
      "pattern": "^[^0123456789;%#]*$",
      "required": true
    },

    "placename": {
      "title": "Name of Place",
      "type": "string",
      "required": true
    },

    "latitude": {
       "title": "Latitude (decimal degrees)",
       "type": "number",
       "required": true,
       "minimum": 0,
       "maximum": 90
    },

    "longitude": {
       "title": "Longitude (decimal degrees)",
       "type": "number",
       "required": true,
       "minimum": 0,
       "maximum": 180
    }
  }
}
