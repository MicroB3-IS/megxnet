{
    "title": "MyOSD Teilnehmer Registrierung",
    "description": "Please fill all fields for a sample and submit.",
    
    "type": "object",
    "properties": {
        "version": {
            "type": "string",
            "readonly": true,
            "required": true,
            "default": "1"
        },
        "firstname": {
            "type": "string",
            "required": true
        },
        "lastname": {
            "type": "string",
            "required": true
        },
        "username": {
            "type": "string",
            "required": true
        },
        "kit": {
            "type": "boolean",
            "enum": [true,false],
            "required": true,
            "description": "Hast du "
        },
        "address": {
            "title": "Adress",
            "type": "object",
            "properties": {
                "street": {
                    "title": "Street Name",
                    "type": "string",
                    "required": true
                },
                "street_num": {
                    "title": "House Number",
                    "type": "string",
                "   required": true
                },
                "poastal_code": {
                    "title": "Poastal Code",
                    "type": "string",
                    "required": true
                },
                "city": {
                    "title": "City Name",
                    "type": "string",
                    "required": true
                }
            },
            "dependencies": ["kit"]
        },
        "kit_num": {
            "title": "MyOSD Sampling Kit Number",
            "type": "integer",
            "minimum": 271,
            "maximum": 2000,
             "dependencies": ["kit"]
        },
        "placename": {
            "title": "Name of Place",
            "type": "string",
            "required": true
        },
        "lat": {
            "title": "Latitude in decimal degrees (WGS84)",
            "type": "number",
            "minimum": -90.00,
            "maximum": 90.00,
            "required": true
        },
        "lon": {
            "title": "Longitude in decimal degrees (WGS84)",
            "type": "number",
            "minimum": -180.00,
            "maximum": 180.00,
            "required": true
        }
        
    },
    "dependencies": {
        "address": ["kit"],
        "kit_num": ["kit"]
    }
}