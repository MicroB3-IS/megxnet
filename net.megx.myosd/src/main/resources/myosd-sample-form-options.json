{
  "renderForm": true,
  "toolbarSticky": true,
  "form": {
    "attributes": {
      "method": "post",
      "action": "${megx.site.url}/ws/v1/myosd/v1.0.0/samples"
    },

    "buttons": {
      "submit": {
        "title": "Submit"
      }
    }
  },

  "fields": {
    "version": {
      "type": "hidden"
    },

    "firstname": {
      "type": "personalname",
      "disallowOnlyEmptySpaces": true,
      "size": 20
    },

    "lastname": {
      "type": "personalname",
      "disallowOnlyEmptySpaces": true,
      "size": 20
    },

    "email": {
      "id": "email",
      "disallowOnlyEmptySpaces": true,
      "type": "email",
      "size": 20
    },
    "latitude": {
      "id": "lat"
    },
    "longitude": {
      "id": "lon"
    }


  }
}
