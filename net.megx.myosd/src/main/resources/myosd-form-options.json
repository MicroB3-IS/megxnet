{ 
  "renderForm": true,
  "toolbarSticky": true,
  "form": { 
    "toggleSubmitValidState": true,
    "attributes": {  
      "method": "post",
      "action": "http://httpbin.org/post"
    },

    "buttons": { 
      "submit": { 
        
      },

      "reset": { 
        
      }
    }
  },

  "fields": { 
    "version": { 
      "type": "hidden"
    },

    "firstname": { 
      "label": "Vorname",
      "type": "personalname",
      "size": 20,
      "helper": "Bitte gib Deinen Vornamen ein."
    },

    "lastname": { 
      "label": "Nachname",
      "type": "personalname",
      "size": 20,
      "helper": "Bitte gib Deinen Nachnamen ein."
    },

    "username": { 
      "label": "Benutzername",
      "type": "personalname",
      "size": 20,
      "helper": "Bitte gib einen Benutzernamen ein.",
      "helpers": 
      [
        "Bitte gib einen Benutzernamen ein.",
        "Dieser wird auf unseren Web Seiten angezeigt!"
      ]
    },

    "kit": { 
      "label": "Hast Du schon ein MyOSD Sampling Kit?",
      "type": "radio",
      "optionLabels": 
      [
        "Ja",
        "Nein"
      ],

      "helper": "Hast Du schon ein MyOSD Sampling Kit?",
      "dependencies": { 
        "username": "renzo"
      }
    },

    "address": { 
      "label": "Deine Versandadresse",
      "id": "input-adress",
      "fields": { 
        "street": { 
          "label": "Strasse",
          "size": 30
        },

        "street_num": { 
          "label": "Hausnummer",
          "size": 10
        },

        "poastal_code": { 
          "label": "Postleitzahl",
          "size": 10
        },

        "city": { 
          "label": "Stadt",
          "size": 30
        }
      },

      "dependencies": { 
        "kit": "false"
      }
    },

    "kit_num": { 
      "label": "MyOSD Sampling Kit Nummer",
      "dependencies": { 
        "kit": "true"
      }
    },

    "placename": { 
      "label": "Ortsname der geplannten Probennahme-Stelle"
    },

    "lat": { 
      "label": "Nördlicher oder südlicher Breitengrad",
      "id": "input-lat"
    },

    "lon": { 
      "label": "Östlicher oder westlicher Längengrad",
      "id": "input-lon"
    },

    "terms": { 
      "label": "Teilnahme",
      "fields": { 
        "terms_agree": { 
          "label": "MyOSD Teilnahme?",
          "rightLabel": "Ich stimme den <a target=\"_blank\" href=\"http://www.my-osd.org/teilnahme-bedingungen\">Teilnahmebedingungen</a> zu."
        },

        "osd_agree": { 
          "label": "iPAD Verlosung?",
          "type": "checkbox",
          "rightLabel": "Ja, ich nehme an der iPAD Verlosung teil!"
        },

        "sensebox_agree": { 
          "label": "senseBox Verlosung?",
          "rightLabel": "Ja, ich nehme an der senseBox Verlosung teil",
          "type": "checkbox"
        },

        "sensebox_terms": { 
          "label": "",
          "type": "text",
          "required": true
        }
      }
    }
  }
}