{ 
  "renderForm": true,
  "toolbarSticky": true,
  "form": { 
    "toggleSubmitValidState": true,
    "attributes": { 
      "method": "post",
      "action": "http://httpbin.org/post"
    },

    "buttons": { 
      "submit": { 
        
      },

      "reset": { 
        
      }
    }
  },

  "fields": { 
    "version": { 
      "type": "hidden"
    },

    "firstname": { 
      "label": "Vorname",
      "type": "personalname",
      "size": 20,
      "helper": "Bitte gib Deinen Vornamen ein."
    },

    "lastname": { 
      "label": "Nachname",
      "type": "personalname",
      "size": 20,
      "helper": "Bitte gib Deinen Nachnamen ein."
    },

    "username": { 
      "label": "Benutzername",
      "type": "personalname",
      "size": 20,
      "helper": "Bitte gib einen Benutzernamen ein.",
      "helpers": 
      [
        "Beachte, dass dieser wird auf unseren Web Seiten angezeigt wird!"
      ]
    },

    "email": { 
      "label": "E-Mail Adresse",
      "type": "email",
      "size": 20,
      "helper": "Für Rückfragen und Status Meldungen"
    },

    "kit": { 
      "label": "Hast Du schon ein MyOSD Sampling Kit?",
      "type": "radio",
      "optionLabels": 
      [
        "Ja",
        "Nein"
      ],

      "helper": "Hast Du schon ein MyOSD Sampling Kit?",
      "dependencies": { 
        "username": "renzo"
      }
    },

    "post_station": { 
      "label": "Direkt zu Dir oder an eine Packstation?",
      "type": "radio",
      "optionLabels": 
      [
        "Direkt",
        "An Packstation"
      ],

      "helper": "Hast Du schon ein MyOSD Sampling Kit?",
      "dependencies": { 
        "kit": "false"
      }
    },

    "address": { 
      "label": "Deine Versandadresse",
      "id": "input-adress",
      "fields": { 
        "name": { 
          "label": "Name des Empfaengers",
          "size": 30
        },

        "street": { 
          "label": "Strasse",
          "size": 30
        },

        "street_num": { 
          "label": "Hausnummer",
          "size": 10
        },

        "poastal_code": { 
          "label": "Postleitzahl",
          "size": 10
        },

        "city": { 
          "label": "Stadt",
          "size": 30
        }
      },

      "dependencies": { 
        "post_station": "post"
      }
    },

    "station": { 
      "label": "Deine Packstation",
      "id": "input-adress",
      "fields": { 
        "name": { 
          "label": "Name des Empfängers",
          "size": 30
        },

        "post_num": { 
          "label": "Postnummer",
          "size": 30
        },

        "station_num": { 
          "label": "Packstation:",
          "size": 10
        },

        "poastal_code": { 
          "label": "Postleitzahl",
          "size": 10
        },

        "city": { 
          "label": "Stadt",
          "size": 30
        }
      },

      "dependencies": { 
        "post_station": "station"
      }
    },

    "kit_num": { 
      "label": "MyOSD Sampling Kit Nummer",
      "dependencies": { 
        "kit": "true"
      }
    },

    "placename": { 
      "label": "Name der geplannten Probennahme-Stelle",
      "placeholder": "Duhnen, Nordsee",
      "helper": "Gib einen so genauen Namen wie möglich ein. "
    },

    "lat": { 
      "label": "Nördlicher oder südlicher Breitengrad",
      "placeholder": "53.882778",
      "readonly": true,
      "id": "input-lat"
    },

    "lon": { 
      "label": "Östlicher oder westlicher Längengrad",
      "placeholder": "8.645556",
      "readonly": true,
      "id": "input-lon"
    },

    "terms": { 
      "label": "Teilnahme",
      "fields": { 
        "terms_agree": { 
          "label": "MyOSD Teilnahme?",
          "optionLabels": 
          [
            "<strong>Ja!</strong> Ich stimme den <a target=\"_blank\" href=\"http://www.my-osd.org/teilnahme-bedingungen\">Teilnahmebedingungen</a> zu.",
            "<strong>Nein!</strong> Ich stimme den <a target=\"_blank\" href=\"http://www.my-osd.org/teilnahme-bedingungen\">Teilnahmebedingungen</a> nicht zu."
          ]
          
        },

        "osd_agree": { 
          "label": "iPad mini Verlosung",
          "type": "checkbox",
          "rightLabel": "Ja, ich nehme an der iPad mini Verlosung teil!"
        },

        "sensebox_agree": { 
          "label": "senseBox Verlosung?",
          "rightLabel": "Ja, ich nehme an der <a target=\"_blank\" href=\"senseBox:home\">senseBox:home</a> Verlosung teil",
          "type": "checkbox"
        },

        "sensebox_terms": { 
          "label": "",
          "rightLabel": "Ich verpflichte mich, im Falle eines Gewinns, die <a target=\"_blank\" href=\"senseBox:home\">senseBox:home</a> aufzustellen und in Betrieb zu nehmen. Mehr Informationen zum <a target=\"_blank\" href=\"http://www.sensebox.de/de/products/\">Open senseBox Projekt</a>",
          "type": "checkbox",
          "required": true
        }
      }
    }
  }
}